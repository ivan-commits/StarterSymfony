{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    {% include 'components/_message_flash.html.twig' %}

    <div class="top">
        <div class="loginForm">
            <div class="row d-flex justify-content-center">
                <div class="block-form signin col-lg-3 col-md-6 col-5">
                    <div class="row header">
                        <div class="col-12">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</div>
                    </div>
                    <div class="row content">
                        <div class="col-12">
                            {{ form_start(loginForm) }}
                            {{ form_row(loginForm.email) }}
                            {{ form_row(loginForm.password) }}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="row d-flex justify-content-center">
                                <button class="col-6 btn btn-sm btn-primary" type="submit" style="  background: #FA7268;">Sign in</button>
                            </div>
                            {{ form_end(loginForm) }}
                        </div>
                    </div>
                </div>
                <div class="block-form signup col-lg-2 col-md-5 col-4">
                    <div class="row header">
                        <div class="col-12">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</div>
                    </div>
                    <div class="row content">
                        <div class="col-12">Lorem ipsum dolor sit amet, cosint tempora! Labore perferendis rerum sint!</div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <a class="col-8 btn btn btn-sm btn-primary" href="{{path('app_register')}}" style="background: #C62368">Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bot"></div>
{% endblock %}
